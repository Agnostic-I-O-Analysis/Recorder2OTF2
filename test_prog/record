gcc test_prog.c
./a.out

if [[ $? -eq 139 ]]; then
    echo "segfault"
    exit 1;
fi

rp=$(ls | grep "recorder-.*")
# sp=$(ls | grep "scorep-.*")
sp="scorep_trace_out"

if [ -z "$rp" ]
then
    echo ""
else
      rm -rf $rp
fi

if [ -z "$sp" ]
then
    echo ""
else
      rm -rf $sp
fi

RECORDER_WITH_NON_MPI=1 LD_PRELOAD=/usr/local/lib/librecorder.so ./a.out


export SCOREP_ENABLE_TRACING=true
export SCOREP_ENABLE_PROFILING=true

/opt/scorep/bin/scorep gcc test_prog.c
./a.out


rp=$(ls | grep "recorder-.*")
sp=$(ls | grep "scorep-.*")

mv ./$rp/* ./$rp/out
mv ./$sp/ ./scorep_trace_out/
